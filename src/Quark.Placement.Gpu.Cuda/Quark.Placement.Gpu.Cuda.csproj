    <ItemGroup>
        <ProjectReference Include="..\Quark.Placement.Abstractions\Quark.Placement.Abstractions.csproj" />
        <ProjectReference Include="..\Quark.Placement.Gpu\Quark.Placement.Gpu.csproj" />
    </ItemGroup>

</Project>
